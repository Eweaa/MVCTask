<div class="card p-4 w-50 mx-auto rounded-3">
    <h2>Login Form</h2>
    <form method="post" class="mb-3">
        <label for="Email" class="col-form-label"></label>
        <input id="Email" class="form-control" name="email" placeholder="Enter your email" />

        <label for="Password" class="col-form-label"></label>
        <input id="Password" type="password" class="form-control mb-3" name="password" placeholder="Enter your password" />
        

        <button type="submit" class="btn btn-outline-primary">Login</button>
    </form>
    <div>Don't have an account?<br /> <a asp-action="Register" asp-controller="Account"> Register here</a></div>
</div>