@model MVCTask.DTOs.RegisterDto

<div class="card p-4 w-50 mx-auto rounded-3">
    <h2>Register Form</h2>
    <form method="post" asp-controller="Account" asp-action="Register" class="mb-3">
        <label asp-for="@Model.UserName" class="col-form-label"></label>
        <input asp-for="@Model.UserName" class="form form-control" placeholder="Enter your UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>

        <label asp-for="@Model.Email" class="col-form-label"></label>
        <input asp-for="@Model.Email" class="form-control" placeholder="Enter your Email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="@Model.Password" class="col-form-label"></label>
        <input asp-for="@Model.Password" type="password" class="form-control mb-3" placeholder="Enter your Password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <button type="submit" class="btn btn-outline-primary">Register</button>
    </form>
    <div>Already have an account? <br /><a asp-action="Login" asp-controller="Account">Login here</a></div>
</div>